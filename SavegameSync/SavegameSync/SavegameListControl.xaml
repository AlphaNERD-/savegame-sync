<UserControl x:Class="SavegameSync.SavegameListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SavegameSync"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListBox x:Name="savegameListBox" HorizontalAlignment="Left" Height="218" Margin="0,37,0,0" VerticalAlignment="Top" Width="203"/>
        <TextBlock x:Name="currentGameTextBlock" HorizontalAlignment="Left" Margin="0,16,0,0" TextWrapping="Wrap" Text="(Choose a game)" VerticalAlignment="Top"/>
        <TextBlock x:Name="labelTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Cloud savegames for:" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
